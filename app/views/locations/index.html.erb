<h1> Map View </h1>

<div>
	<div id="map_canvas" style="width:100px; height:100px"> </div>
</div>

<h1>Listing locations</h1>

<table>
  <tr>
    <th>X coord</th>
    <th>Y coord</th>
    <th>Description</th>
    <th>User</th>
    <th>Is active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.x_coord %></td>
    <td><%= location.y_coord %></td>
    <td><%= location.description %></td>
    <td><%= location.user_id %></td>
    <td><%= location.is_active %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

