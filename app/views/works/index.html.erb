    <th>Sketch</th>
    <th>Artist</th>
    <th>Is real</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @works.each do |work| %>
  <tr>
    <td><%= work.title %></td>
    <td><%= work.description %></td>
    <td><%= work.sketch %></td>
    <td><%= work.artist_id %></td>
    <td><%= work.is_real %></td>
    <td><%= link_to 'Show', work %></td>
    <td><%= link_to 'Edit', edit_work_path(work) %></td>
    <td><%= link_to 'Destroy', work, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

